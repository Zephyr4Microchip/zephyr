/dts-v1/;
#include <microchip/pic32c/pic32cx_bz/bz2x/bz25/pic32cx1012bz25048.dtsi>
#include "wbz451_curiosity-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/i2c/i2c.h>

/ {
	model = "Microchip WBZ451 Curiosity";
	compatible = "microchip,wbz451-curiosity";

	chosen {
		zephyr,console = &sercom0;
		zephyr,shell-uart = &sercom0;
		zephyr,sram = &sram0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&portb 0 GPIO_ACTIVE_HIGH>;
			label = "Red LED 1";
		};
		led1: led_1 {
			gpios = <&portb 3 GPIO_ACTIVE_HIGH>;
			label = "Green LED 1";
		};
		led2: led_2 {
			gpios = <&portb 5 GPIO_ACTIVE_HIGH>;
			label = "Blue LED 1";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&portb 4 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "SW0";
			zephyr,code = <INPUT_KEY_0>;
		};
	};
	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		sw0 = &button0;
	};
};

&cpu0 {
	clock-frequency = <64000000>;
};


&sercom0 {
	status = "okay";
	compatible = "microchip,sercom-g1-uart";
	rxpo = <1>;
	txpo = <0>;
	current-speed = <115200>;
	pinctrl-0 = <&sercom0_uart_default>;
	pinctrl-names = "default";

	dmas = <&dmac 0 4>, <&dmac 1 5>;
	dma-names = "rx", "tx";
};

/* sercom 1 in spi mode, so disable uart mode
 *&sercom1 {
 *	status = "okay";
 *	compatible = "microchip,sercom-g1-uart";
 *	rxpo = <1>;
 *	txpo = <0>;
 *	current-speed = <115200>;
 *	pinctrl-0 = <&sercom1_uart_default>;
 *	pinctrl-names = "default";
 *
 *	dmas = <&dmac 2 6>, <&dmac 3 7>;
 *	dma-names = "rx", "tx";
 *};
 */

/* sercom 1 spi master mode */
&sercom1 {
	status = "okay";
	compatible = "microchip,sercom-g1-spi";
	dipo = <3>;
	dopo = <0>;
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&sercom1_spi_default>;
	pinctrl-names = "default";

	dmas = <&dmac 2 6>, <&dmac 3 7>;
	dma-names = "rx", "tx";
};

/* sercom 1 spi slave mode
 *&sercom1 {
 *	status = "okay";
 *	compatible = "microchip,sercom-g1-spi";
 *	dipo = <0>;
 *	dopo = <2>;
 *	#address-cells = <1>;
 *	#size-cells = <0>;
 *	pinctrl-0 = <&sercom1_spi_default>;
 *	pinctrl-names = "default";
 *
 *	dmas = <&dmac 2 6>, <&dmac 3 7>;
 *	dma-names = "rx", "tx";
 *};
 */

&sercom2 {
	status = "okay";
	compatible = "microchip,sercom-g1-i2c";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&sercom2_i2c_default>;
	pinctrl-names = "default";

	dmas = <&dmac 4 8>, <&dmac 5 9>;
	dma-names = "rx", "tx";
};

&porta {
	status = "okay";
};

&portb {
	status = "okay";
};
