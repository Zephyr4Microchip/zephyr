/dts-v1/;
#include <microchip/sam/sam_d5x_e5x/same54/atsame54p20a.dtsi>
#include "sam_e54_xpro-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/gpio/microchip-sam-gpio.h>

/ {
	model = "SAM E54 Xplained Pro";
	compatible = "same54,xpro", "microchip,atsame54p20a", "microchip,same54";

	chosen {
		zephyr,console = &sercom2;
		zephyr,shell-uart = &sercom2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	aliases {
		led0 = &led0;
		i2c-0 = &sercom7;
		sw0 = &button0;
		pwm-led0 = &pwm_led0;
		rtc = &rtc;
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&portb 31 (GPIO_PULL_UP | GPIO_ACTIVE_LOW | MCHP_GPIO_DEBOUNCE)>;
			label = "SW0";
			zephyr,code = <INPUT_KEY_0>;
		};
	};
	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&portc 18 GPIO_ACTIVE_LOW>;
			label = "Yellow LED";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			status = "okay";
			pwms = <&tcc0 2 PWM_MSEC(20) 0>;
		};
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/*
		 * The final 16 KiB is reserved for the application.
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@fc000 {
			label = "storage";
			reg = <0x000fc000 0x00004000>;
		};
	};
};

&cpu0 {
	clock-frequency = <120000000>;
};

&sercom2 {
	status = "okay";
	compatible = "microchip,sercom-u2201-uart";

	current-speed = <115200>;
	data-bits = <8>;
	parity = "none";
	stop-bits = "1";

	rxpo = <1>;
	txpo = <0>;
	//clock_external;
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-0 = <&sercom2_uart_default>;
	pinctrl-names = "default";

	dmas = <&dmac 1 8>, <&dmac 2 9>;
	dma-names = "rx", "tx";
};

&sercom7 {
	status = "okay";
	compatible = "microchip,sercom-u2201-i2c";
	clock-frequency = <I2C_BITRATE_FAST>;
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-0 = <&sercom7_i2c_default>;
	pinctrl-names = "default";

	dmas = <&dmac 10 0x12>, <&dmac 11 0x13>;
	dma-names = "rx", "tx";
};

&sercom6 {
	status = "okay";
	compatible = "microchip,sercom-u2201-spi";
	dipo = <3>;
	dopo = <0>;
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&sercom6_spi_default>;
	pinctrl-names = "default";

};

&rtc {
	compatible = "microchip,rtc-u2250";
	status = "okay";
	prescaler = <1024>;
	alarms-count = <2>;
	cal-constant = <1048576>;  /*(8192 * 128 = 1048576)*/
};

&tc0 {
	status = "disabled";
	compatible = "microchip,pwm-tc-u2249";
	#pwm-cells = <3>;
	pinctrl-0 = <&tc0_pwm_default>;
	pinctrl-names = "default";
	max_bit_width = <32>;
	prescaler = <1>;
	channels = <2>;
	/* Chained to TC1 for 32-bit operation */
	client = <&tc1>;
};

&tcc0 {
	status = "okay";
	compatible = "microchip,pwm-tcc-u2213";
	#pwm-cells = <3>;
	pinctrl-0 = <&tcc0_pwm_default>;
	pinctrl-names = "default";
	max_bit_width = <24>;
	prescaler = <1>;
	channels = <6>;
};
