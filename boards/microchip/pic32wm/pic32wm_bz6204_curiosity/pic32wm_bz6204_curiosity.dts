/dts-v1/;
#include <microchip/pic32c/pic32cx_bz/bz6x/bz62/pic32cx2051bz62132.dtsi>
#include "pic32wm_bz6204_curiosity-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/i2c/i2c.h>

/ {
	model = "Microchip PIC32WM_BZ6204 Curiosity";
	compatible = "microchip,pic32wm-bz6204-curiosity";

	chosen {
		zephyr,console = &sercom0;
		zephyr,shell-uart = &sercom0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
		zephyr,bt-hci = &bt_hci_microchip;
		zephyr,bt-c2h-uart = &sercom0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&portc 7 GPIO_ACTIVE_HIGH>;
			label = "Red LED 1";
		};
		led1: led_1 {
			gpios = <&portc 10 GPIO_ACTIVE_HIGH>;
			label = "Green LED 1";
		};
		led2: led_2 {
			gpios = <&porte 0 GPIO_ACTIVE_HIGH>;
			label = "Blue LED 1";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&porte 3 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "SW0";
			zephyr,code = <INPUT_KEY_0>;
		};
	};
	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		sw0 = &button0;
		rtc = &rtc;
	};
};

&cpu0 {
	clock-frequency = <128000000>;
};


&sercom0 {
	status = "okay";
	compatible = "microchip,sercom-g1-uart";
	rxpo = <1>;
	txpo = <0>;
	current-speed = <115200>;
	pinctrl-0 = <&sercom0_uart_default>;
	pinctrl-names = "default";

	dmas = <&dmac 0 4>, <&dmac 1 5>;
	dma-names = "rx", "tx";
};

&sercom1 {
	status = "okay";
	compatible = "microchip,sercom-g1-i2c";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&sercom1_i2c_default>;
	pinctrl-names = "default";

	dmas = <&dmac 2 6>, <&dmac 3 7>;
	dma-names = "rx", "tx";
};

/* sercom 4 uart mode for mikroBUS socket 1
 *&sercom4 {
 *	status = "okay";
 *	compatible = "microchip,sercom-g1-uart";
 *	rxpo = <2>;
 *	txpo = <0>;
 *	current-speed = <115200>;
 *	pinctrl-0 = <&sercom4_uart_default>;
 *	pinctrl-names = "default";
 *
 *	dmas = <&dmac 4 12>, <&dmac 5 13>;
 *	dma-names = "rx", "tx";
 *};
 */

/* sercom 4 spi master mode for mikroBUS socket 1 */
&sercom4 {
	status = "okay";
	compatible = "microchip,sercom-g1-spi";
	dipo = <0>;
	dopo = <2>;
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-0 = <&sercom4_spi_master_socket1>;
	pinctrl-names = "default";

	dmas = <&dmac 4 12>, <&dmac 5 13>;
	dma-names = "rx", "tx";
};

/* sercom 4 spi slave mode for mikroBUS socket 1
 *&sercom4 {
 *	status = "okay";
 *	compatible = "microchip,sercom-g1-spi";
 *	dipo = <3>;
 *	dopo = <0>;
 *	#address-cells = <1>;
 *	#size-cells = <0>;
 *
 *	pinctrl-0 = <&sercom4_spi_slave_socket1>;
 *	pinctrl-names = "default";
 *
 *	dmas = <&dmac 4 12>, <&dmac 5 13>;
 *	dma-names = "rx", "tx";
 *};
 */

/* sercom 4 spi master mode for mikroBUS socket 2
 * socket 2 does not support slave mode
&sercom4 {
	status = "okay";
	compatible = "microchip,sercom-g1-spi";
	dipo = <0>;
	dopo = <2>;
	#address-cells = <1>;
	#size-cells = <0>;

	pinctrl-0 = <&sercom4_spi_master_socket2>;
	pinctrl-names = "default";

	dmas = <&dmac 4 12>, <&dmac 5 13>;
	dma-names = "rx", "tx";
};
*/

/* sercom 5 uart mode for mikroBUS socket 2  */
&sercom5 {
	status = "okay";
	compatible = "microchip,sercom-g1-uart";
	rxpo = <3>;
	txpo = <0>;
	current-speed = <115200>;
	pinctrl-0 = <&sercom5_uart_default>;
	pinctrl-names = "default";

	dmas = <&dmac 6 14>, <&dmac 7 15>;
	dma-names = "rx", "tx";
};


&bt_hci_microchip {
	status = "okay";
};


&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		code_partition: partition@0 {
			label = "code";
			reg = <0x0 DT_SIZE_K(2048-16)>;  /* Start at 0x01000000, size 2 MB */
			read-only;
		};

		/*
		 * The final 16 KiB is reserved for the application.
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@1FC000 {
			label = "storage";
			reg = <0x1FC000 0x00004000>;
		};
	};
};

&porta {
	status = "okay";
};

&portb {
	status = "okay";
};

&rtc {
	compatible = "microchip,rtc-g1";
	status = "okay";
	prescaler = <1024>;
	alarms-count = <2>;
	cal-constant = <1048576>;  /*(8192 * 128 = 1048576)*/
};
