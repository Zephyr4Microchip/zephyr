	config FUSES_DEVCFG2_DMTINTV_WIN_7_8
		bool "WIN_7_8"
	config FUSES_DEVCFG2_DMTINTV_WIN_15_16
		bool "WIN_15_16"
	config FUSES_DEVCFG2_DMTINTV_WIN_31_32
		bool "WIN_31_32"
	config FUSES_DEVCFG2_DMTINTV_WIN_63_64
		bool "WIN_63_64"
	config FUSES_DEVCFG2_DMTINTV_WIN_127_128
		bool "WIN_127_128"
endchoice

