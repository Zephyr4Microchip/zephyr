	int
	default 0 if FUSES_DEVCFG4_DSWDTPS_DSPS5
	default 1 if FUSES_DEVCFG4_DSWDTPS_DSPS6
	default 2 if FUSES_DEVCFG4_DSWDTPS_DSPS7
