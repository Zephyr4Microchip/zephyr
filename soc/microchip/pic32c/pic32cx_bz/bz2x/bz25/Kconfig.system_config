choice FUSES_DEVCFG2_PMUTEST_VDD_EN
	prompt "PMU Test Output or VDD/2 Enable via ADC IE12 (PMUTEST_VDD_EN)"
	default FUSES_DEVCFG2_PMUTEST_VDD_EN_VDD_DIV_2
