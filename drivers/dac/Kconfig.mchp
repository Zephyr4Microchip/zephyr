config DAC_MCHP_COMMON
        bool
        help
          Common option for microchip DAC drivers

config DAC_MCHP_G1
	bool "Microchip DAC Driver for DAC G1 Peripherals"
	depends on DT_HAS_MICROCHIP_DAC_G1_ENABLED
	default y
	select DAC_MCHP_COMMON
	select PINCTRL
	help
	  Enable support for the Microchip DAC driver on G1 DAC peripherals.

	  This driver supports Microchip device families:
	  - SOC_FAMILY_MCHP_SAM_D5X_E5X

if CLOCK_CONTROL_MCHP_COMMON

config DAC_MCHP_DIFFERENTIAL
	bool "Differential Mode Enable"
	help
	  Enable Differential Mode support

endif # CLOCK_CONTROL_MCHP_COMMON
