&sercom6 {
	status = "disabled";
};

&sercom4 {
	status = "okay";
	compatible = "microchip,sercom-g1-spi";
	/* Internally connect MOSI to MISO for loop-back operation */
	dipo = <3>;
	dopo = <2>;
	/* Assign a CS pin */
	cs-gpios = <&portb 28 GPIO_ACTIVE_LOW>;
	/* Configure DMA */
	dmas = <&dmac 0 12>, <&dmac 1 13>;
	dma-names = "rx", "tx";
	slow@0 {
		compatible = "test-spi-loopback-slow";
		reg = <0>;
		spi-max-frequency = <500000>;
	};
	fast@0 {
		compatible = "test-spi-loopback-fast";
		reg = <0>;
		spi-max-frequency = <24000000>;
	};
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-0 = <&sercom4_spi_default>;
	pinctrl-names = "default";
};

&pinctrl {
	sercom4_spi_default: sercom4_spi_default {
		group1 {
			pinmux = <PB26D_SERCOM4_PAD1>,
					 <PB27D_SERCOM4_PAD0>,
					 <PB29D_SERCOM4_PAD3>;
		};
	};
};
